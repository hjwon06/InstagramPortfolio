<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/story_add_img"
                android:layout_width="match_parent"
                android:layout_height="591dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.166"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/story_efc"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/story_img_tag"
                app:layout_constraintTop_toTopOf="@+id/story_add_img"
                app:srcCompat="@drawable/ic_story_eft" />

            <ImageView
                android:id="@+id/story_back_btn"
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/story_add_img"
                app:srcCompat="@drawable/ic_story_add_back" />

            <ImageView
                android:id="@+id/story_flash"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="108dp"
                app:layout_constraintStart_toEndOf="@+id/story_back_btn"
                app:layout_constraintTop_toTopOf="@+id/story_add_img"
                app:srcCompat="@drawable/ic_story_lng" />

            <ImageView
                android:id="@+id/story_save"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/story_shy"
                app:layout_constraintTop_toTopOf="@+id/story_add_img"
                app:srcCompat="@drawable/ic_story_save" />

            <ImageView
                android:id="@+id/story_img_tag"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toEndOf="@+id/story_flash"
                app:layout_constraintTop_toTopOf="@+id/story_add_img"
                app:srcCompat="@drawable/ic_story_img_tag" />

            <ImageView
                android:id="@+id/story_shy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toEndOf="@+id/story_efc"
                app:layout_constraintTop_toTopOf="@+id/story_add_img"
                app:srcCompat="@drawable/ic_story_shy" />

            <ImageView
                android:id="@+id/mystory_btn"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/story_add_img"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_mystory_btn" />

            <ImageView
                android:id="@+id/story_fre_btn"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/mystory_btn"
                app:layout_constraintTop_toBottomOf="@+id/story_add_img"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_story_fre_btn" />

            <ImageView
                android:id="@+id/story_add_btn"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/story_fre_btn"
                app:layout_constraintTop_toBottomOf="@+id/story_add_img"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_story_add_btn" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>